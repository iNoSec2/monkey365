  "rule": {
    "path": "aad_conditional_access_policy",
    "subPath": null,
    "selectCondition": {
      
    },
    "query": [
      {
        "operator": "and",
        "filter": [
          {
            "conditions": [
              [
                "state",
                "eq",
                "true"
              ],
              [
                "conditions.users.includeUsers",
                "eq",
                "All"
              ],
              [
                "conditions.applications.includeApplications",
                "eq",
                "All"
              ]
            ],
            "operator": "and"
          }
        ]
      },
      {
        "connectOperator": "and",
        "filter": [
          {
            "conditions": [
              [
                "grantControls.operator",
                "eq",
                "OR"
              ],
              [
                "grantControls.builtInControls",
                "match",
                "compliantDevice"
              ],
              [
                "grantControls.builtInControls",
                "match",
                "domainJoinedDevice"
              ]
            ],
            "operator": "and"
          }
        ]
      }
    ],
    "shouldExist": "true",
    "returnObject": null,
    "removeIfNotExists": null
  },
