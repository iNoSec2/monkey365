    "path": "az_app_services",
    "subPath": null,
    "selectCondition": {
      
    },
    "query": [
      {
        "filter": [
          {
            "conditions": [
              [
                "basicPublishingCredentialsPolicies.properties.allow",
                "eq",
                "false"
              ],
			  [
                "appConfig.properties.ftpsState",
                "eq",
                "AllAllowed"
              ]
            ],
			"operator": "or"
